	example/protel-pnp/SE_SG_IF_V2.GTS,
	example/protel-pnp/SE_SG_IF_V2.LDP,
	example/protel-pnp/SE_SG_IF_V2.REP,
	example/protel-pnp/SE_SG_IF_V2.RUL,
